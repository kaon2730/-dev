import java.util.Scanner;
public class Genel {

	public static void main(String[] args) {
		int deger,toplam=0;
		Scanner giris = new Scanner(System.in);
		do {
			System.out.println("Sayiyi giriniz");
			deger = giris.nextInt();
			if(deger%2==0 && deger%4==0) {
				toplam+=deger;
			}
		}while(deger%2==0);
		System.out.println(toplam);
	}

}
