import java.util.Scanner;
public class Genel {

	public static void main(String[] args) {
		int n,r;
		int sonuc;
		Scanner giris = new Scanner(System.in);
		System.out.println("Kumenin eleman sayisini giriniz");
		n=giris.nextInt();
		System.out.println("Kac elemanli gruplarinin bulunacagini giriniz");
		r=giris.nextInt();
		if(n>0 && r>0 && r<=n) {
		sonuc=faktoriyel(n)/(faktoriyel(r)*faktoriyel(n-r));
		System.out.println(n +"'in " +r +"'li kombinasyonlar覺n覺n say覺s覺: "+ sonuc );
		} else {
			System.out.println("Hatali giris yaptiniz");
		}
		}
	public static int faktoriyel(int a) {
		int sonuc=1;
		for(int i=1; i<=a; i++) {
			sonuc *=i;
		}
		return sonuc;
	}
}
