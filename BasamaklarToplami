import java.util.Scanner;
public class Genel {

	public static void main(String[] args) {
		int sayi,toplam=0;
		Scanner scan = new Scanner(System.in);
		System.out.println("Sayiyi giriniz");
		sayi = scan.nextInt();
		while(sayi>0) {
			toplam += sayi%10;
			sayi = sayi/10;
		}
		System.out.println("Basamaklar toplami: " + toplam);
	}
}
